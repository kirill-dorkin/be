{
  "extends": "stylelint-config-standard",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "variants", "responsive", "screen", "layer"]
      }
    ],
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["theme"]
      }
    ],
    "selector-class-pattern": [
      "^([a-z][a-z0-9]*)([-_][a-z0-9]+)*$|^PhoneInputInput$",
      {
        "message": "Expected class selector to be kebab-case or a known library class"
      }
    ]
  }
}